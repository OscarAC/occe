-- ============================================================================
-- Core Plugins
-- ============================================================================

-- Core utility functions (insert_text, duplicate_line, etc.)
editor.load_plugin("core.lua")

-- Search and replace functionality
editor.load_plugin("search.lua")

-- ============================================================================
-- Custom Functions
-- ============================================================================
-- Define your own custom functions here

function quick_comment()
    local x, y = buffer.get_cursor()
    buffer.set_cursor(0, y)
    buffer.insert_string("# ")
    buffer.set_cursor(x + 2, y)
    editor.message("Line commented")
end

-- Example: Insert current date
function insert_date()
    local date = os.date("%Y-%m-%d")
    buffer.insert_string(date)
    editor.message("Date inserted")
end

